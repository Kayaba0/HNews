{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": []  // <-- importante, non includere vite/client
  },
  "include": ["server/**/*.ts", "script/**/*.ts"],
  "exclude": ["client/**/*", "node_modules", "vite.config.ts"]
}