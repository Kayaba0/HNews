{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "express"]
  },
  "include": ["server/**/*.ts", "script/**/*.ts"],
  "exclude": ["client/**/*", "node_modules", "vite.config.ts", "vite-plugin-*.ts"]
}
